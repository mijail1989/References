{% extends 'base.html.twig' %}

{% block title %}Reference index{% endblock %}

{% block body %}
    <h1>Reference index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Url</th>
                <th>Lang</th>
                <th>Description</th>
                <th>Img</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reference in references %}
            <tr>
                <td>{{ reference.id }}</td>
                <td>{{ reference.name }}</td>
                <td>{{ reference.url }}</td>
                <td>{{ reference.lang }}</td>
                <td>{{ reference.description }}</td>
                <td>{{ reference.img }}</td>
                <td>
                    <a href="{{ path('app_reference_show', {'id': reference.id}) }}">show</a>
                    <a href="{{ path('app_reference_edit', {'id': reference.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_reference_new') }}">Create new</a>
{% endblock %}
